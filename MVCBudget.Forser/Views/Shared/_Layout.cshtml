<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - MVCBudget.Forser</title>
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    </head>
    <body>
        <header>
             <nav class="navbar navbar-expand-lg flex-lg-nowrap flex-wrap">
                <div class="container-fluid">
                    <a class="navbar-brand abs fs-3 fw-bold" asp-controller="Home" asp-action="Index"><i class="bi bi-coin"></i> Budget Application</a>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item active pe-4">
                            <div class="btn-group">
                                <button type="button" id="btn-confirm" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddCategoryModal">New Category</button>
                                <button type="button" id="btn-confirm" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ListCategoriesModal">List Categories</button>
                                <button type="button" id="btn-confirm" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#CreateTransactionModal">New Transaction</button>
                            </div>
                        </li>
                        <li class="nav-item">
                            <form class="d-flex w-100" role="search">
                                <input type="text" class="form-control" placeholder="Search for Transaction" aria-label="Search" id="SearchField" />
                                <button class="btn btn-outline-success" type="submit">Search</button>
                            </form>
                        </li>
                    </ul>
                 </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
            <footer id="footer" class="border-top footer text-muted">
                <div class="container">
                    &copy; 2023 - Budget Application
                </div>
            </footer>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>