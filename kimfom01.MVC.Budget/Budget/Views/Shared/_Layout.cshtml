<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Budget</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="text-success">

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
        <div class="container container-fluid">
            <a class="navbar-brand mr-auto fw-bold fs-3 text-success" asp-area="" asp-controller="Home" asp-action="Index">Budget Finance Tracker</a>
        </div>
    </nav>
</header>
<div class="page-container">
    <div class="container" id="content-wrap">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="border-top footer text-muted text-center">
        <div class="container">
            <p class="">&copy; Kim Fom 2023</p>
        </div>
    </footer>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
